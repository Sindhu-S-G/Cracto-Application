<center>
    <div class="container body-content" style="padding:20px;">
        <div class="data-area">

            @using (Html.BeginForm())
            {
               

                   <div class="data-style">
                       @Html.Label("Patient Name", htmlAttributes: new { @class = "control-label col-md-10" })
                       <div class="col-md-10">
                           @Html.TextBox("Name", null, new { @class = "form-control inputdefault", @placeholder = "Enter Name", @id = "emailId" })
                           @Html.ValidationMessage("Name")
                       </div>
                    </div>

                    <div  class="data-style">
                        @Html.Label("Email ", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-10">
                             @Html.TextBox("Email", null, new { @class = "form-control inputdefault", @placeholder = "Enter Email-Id", @id = "emailId" })
                             @Html.ValidationMessage("Email")
                        </div>
                     </div>
                
                     <div  class="data-style">
                        @Html.Label("Phone Number", htmlAttributes: new { @class = "control-label col-md-10" })
                        <div class="col-md-10">
                            @Html.TextBox("Email", null, new { @class = "form-control inputdefault", @placeholder = "Enter Email-Id", @id = "emailId" })
                            @Html.ValidationMessage("Phone Number")
                        </div>
                    </div>
                
                <div  class="data-style">
                        @Html.Label("Time", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-10">
                            @Html.TextBox("Email", null, new { @class = "form-control inputdefault", @placeholder = "Enter Email-Id", @id = "emailId" })
                            @Html.ValidationMessage("Time")
                        </div>
                    </div>

                <div class="form-group" style="text-align:center;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary " />
                    </div>
                </div>

            }
        </div>
    </div>
</center>



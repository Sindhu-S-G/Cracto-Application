@model Doctors_Information_System.Models.UserRegistrationDetail

<center>
    <h2>Edit Account</h2>
</center>

<div class="container-fluid">
    <div style="width:90%;height:30em;padding-top:15px;margin:auto;">

        @using (Html.BeginForm("Account", "Profile", FormMethod.Post))
        {
            <div class="edit-area">

                <div class="form-group input-style">
                    @Html.Label("Full Name", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = "Name", @id = "userName" })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger", @id = "nameAlert" })
                    </div>
                </div>

                <div class="form-group input-style">
                    @Html.Label("Gender", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        <span style="line-height:10px;word-spacing:10px;">
                            @Html.RadioButtonFor(model => model.Gender, "M", new { @id = "Male" })
                            @Html.Label("Male")
                        </span>
                        <span style="line-height:10px;word-spacing:10px;">
                            @Html.RadioButtonFor(model => model.Gender, "F", new { @id = "Female" })
                            @Html.Label("Female")
                        </span>
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group input-style">
                    @Html.Label("Date Of Birth", htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", @placeholder = "dd/mm/yyyy", @id = "datePick"})
                        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger", @id = "dboAlert" })
                    </div>
                </div>
                <div class="form-group input-style">
                    @Html.Label("Email Id", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        <span id="emailLink">

                        </span>
                        @Html.ActionLink("Change", "ChangeEmail")
                    </div>
                </div>

                <div class="form-group input-style">
                    @Html.Label("Blood Group", htmlAttributes: new { @class = "control-label col-md-4", @id = "bloodGroup" })
                    <div class="col-md-10 sizing">
                        @Html.DropDownListFor(model => model.BloodGroup, new List<SelectListItem>
                                                                            {
                                                                              new SelectListItem{Text="O+",Value="O+"},
                                                                              new SelectListItem{Text="O-",Value="O-"},
                                                                              new SelectListItem{Text="A+",Value="A+"},
                                                                              new SelectListItem{Text="A-",Value="A-"},
                                                                              new SelectListItem{Text="B+",Value="B+"},
                                                                              new SelectListItem{Text="B-",Value="B-"},
                                                                              new SelectListItem{Text="AB+",Value="AB+"},
                                                                              new SelectListItem{Text="AB+",Value="AB+"},
                                                                              new SelectListItem{Text="AB-",Value="AB-"}
                                                                              }, "Select Blood group", new { @class = "form-control dropdown-list", @id = "bloodGroup" })
                        @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!--Button is placed-->
            </div>
            <div class="edit-area">
                <div class="form-group input-style">
                    @Html.Label("Phone Number", htmlAttributes: new { @class = "control-label col-md-5" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @id = "phNumber" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger", @id = "phNumberAlert" })
                    </div>
                </div>

                <div class="form-group input-style">
                    @Html.Label("Locality", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Locality, new { @class = "form-control", @id = "location" })
                        @Html.ValidationMessageFor(model => model.Locality, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group input-style">
                    @Html.Label("State", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10 sizing">
                        @Html.DropDownList("State", new SelectList(Model.State, "StateId", "StateName"), new { @class = "form-control dropdown-list", @placeholder = "Select State", @id = "state" })
                        @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-group input-style">
                    @Html.Label("City", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-10">
                        @Html.DropDownList("CityName", new SelectList(Model.CityName, "CityId", "CityName"), new { @class = "form-control dropdown-list", @id = "cityList" })
                        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        }
    </div>
    <div style="margin-left: 15%;padding: 10px;width: 30%;">
        <input type="submit" value="Update Changes" class="btn btn-primary btn-save" id="UpdateChanges">
        @Html.ActionLink("Cancel", "ProfilePage", null, new { @id = "CancelLink" })
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
}





